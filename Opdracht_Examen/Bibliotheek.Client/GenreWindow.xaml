<Window x:Class="Bibliotheek.Client.GenreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliotheek.Client"
        mc:Ignorable="d"
        Title="GenreWindow" Height="160" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,5,10,5" x:Name="lblGenreActie" Content="Geef het toe te voegen genre op:" />
        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,5,10,5" x:Name="txtGenre" />
        <Button Grid.Row="2" Grid.Column="0" Margin="10,5,10,5" x:Name="btnGenreActie" Content="Genre toevoegen" Click="btnGenreActie_Click" />
        <Button Grid.Row="2" Grid.Column="1" Margin="10,5,10,5" x:Name="btnGenreActieAnnuleren" Content="Annuleren" Click="btnGenreActieAnnuleren_Click" />
        
    </Grid>
</Window>
